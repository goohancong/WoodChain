<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <title>Invoice - Order ID: <%= order.orderID %></title>
    <!-- Bootstrap CSS -->
    <link
      rel="icon"
      href="/images/WoodChain Logo.png"
      type="image/x-icon"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <style>
      body {
        background-color: #f8f9fa;
        font-family: "Arial", sans-serif;
        color: #333;
      }
      .invoice-box {
        max-width: 800px;
        margin: 50px auto;
        padding: 30px;
        border: 1px solid #ddd;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(185, 182, 182, 0.15);
        border-radius: 8px;
      }
      .invoice-header {
        display: flex;
        justify-content: space-between;
        border-bottom: 2px solid #007bff;
        margin-bottom: 30px;
        padding-bottom: 10px;
      }
      .invoice-header h2 {
        color: #007bff;
      }
      .invoice-info {
        text-align: right;
        font-size: 1.1rem;
      }
      .info-section h5 {
        margin-bottom: 15px;
      }
      .info-section p {
        margin: 0;
        font-size: 1rem;
      }
      .total {
        margin-top: 30px;
        font-size: 1.5rem;
        text-align: right;
      }
    </style>
  </head>

  <body>
    <div class="invoice-box">
      <!-- Header -->
      <div class="invoice-header">
        <div>
          <p class="fw-bold fs-4"><%= order.supplierCompanyName %></p>
          <p><%= order.supplierAddress %></p>
        </div>
        <div class="text-end fw-bold">
          <h2>Invoice</h2>
        </div>
      </div>
      <!-- End of Header -->

      <!-- Invoice Info and Customer Info -->
      <div class="row mb-4">
        <div class="col-md-6">
          <div class="info-section">
            <h5 class="fw-bold">Bill and Ship To</h5>
            <p><%= order.userCompanyName %></p>
            <p><%= order.userAddress %></p>
          </div>
        </div>
        <div class="col-md-6 text-end">
          <div class="info-section">
            <p><strong>Invoice #: <%= order.orderID %></strong></p>
            <p><strong>Date: <%= order.date %></strong></p>
          </div>
        </div>
      </div>
      <hr />
      <!-- End of Invoice Info and Customer Info -->

      <!-- Table -->
      <table class="table table-hover table-borderless caption-top text-center">
        <thead>
          <tr>
            <th scope="col">Product Name</th>
            <th scope="col">Quantity</th>
            <th scope="col">Unit Price</th>
            <th scope="col">Total Price</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(product => { %>
          <tr>
            <td><%= product.productName %></td>
            <td><%= product.quantity %></td>
            <td>RM<%= product.price.toFixed(2) %></td>
            <td>RM<%= product.totalPrice.toFixed(2) %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <div class="total">Grand Total: RM<%= grandTotal.toFixed(2) %></div>
    </div>
    <!-- End of Table -->

    <!-- Bootstrap JS with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
